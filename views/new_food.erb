<form action="/foods" method="post">
  <h3>Enter a new food into the database:</h3>
  <div>
    <label for="name">Food Name:</label>
    <input type="text" name="name" id="name" 
      value=<%= params[:name] %>>
  </div>
  
  <div>
    <label for="standard_portion">Standard Portion (g):</label>
    <input type="number" name="standard_portion" id="standard_portion" 
      min="0.01" step="0.01" 
      value=<%= params[:standard_portion] || 100 %>>
  </div>
  
  <div>
    <label for="calories">Calories (per Standard Portion):</label>
    <input type="number" name="calories" id="calories" min="0" step="0.01"
      value=<%= params[:calories] %>>
  </div>

  <div>
    <label for="protein">Protein (per Standard Portion):</label>
    <input type="number" name="protein" id="protein" min="0" step="0.01"
      value=<%= params[:protein] %>>
  </div>
  
  <button type="submit">Submit</button>
  <a href="/foods">Cancel</a>
</form>