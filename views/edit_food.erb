<%# Form for editing a food entry %>
<form action="/foods/<%= @food.id %>/edit" method="post">
  <h3>Editing Food Item #<%= @food.id %> (<%= @food.name %>):</h3>
  <div>
    <label for="name">Food Name:</label>
    <input type="text" name="name" id="name" 
      value="<%= params[:name] || @food.name %>">
  </div>
  
  <div>
    <label for="standard_portion">Standard Portion (g):</label>
    <input type="number" name="standard_portion" id="standard_portion" min="1" 
      value=<%= params[:standard_portion] || @food.standard_portion %>>
  </div>
  
  <div>
    <label for="calories">Calories (per Standard Portion):</label>
    <input type="number" name="calories" id="calories" min="1" step="0.01"
      value=<%= params[:calories] || @food.calories %>>
  </div>

  <div>
    <label for="protein">Protein (per Standard Portion):</label>
    <input type="number" name="protein" id="protein" min="1" step="0.01"
      value=<%= params[:protein] || @food.protein %>>
  </div>
  
  <button type="submit">Update</button>
  <a href="/foods">Cancel</a>
</form>